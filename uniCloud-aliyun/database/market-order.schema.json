{
	"bsonType": "object",
	"required": [
		"order_guid",
		"total_cash",
		"create_date"
	],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（订单 ID），系统自动生成"
		},
		"order_guid": {
			"bsonType": "string",
			"description": "唯一订单编号",
			"title": "编号",
			"trim": "both"
		},
		"good_id": {
			"bsonType": "string",
			"title": "商品id",
			"description": "商品id，参考`uni-mall-goods`表",
			"foreignKey": "opendb-mall-goods._id"
		},
		"total_cash": {
			"bsonType": "decimal",
			"description": "实付金额",
			"trim": "both"
		},
		"discount_cash": {
			"bsonType": "decimal",
			"description": "优惠金额",
			"trim": "both"
		},
		"payment_date": {
			"bsonType": "timestamp",
			"description": "支付时间",
			"trim": "both"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}