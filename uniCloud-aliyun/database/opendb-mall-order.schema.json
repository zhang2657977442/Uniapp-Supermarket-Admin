{
	"bsonType": "object",
	"required": [
		"order_guid",
		"user_id",
		"platform_type",
		"total_cash",
		"create_date"
	],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（订单 ID），系统自动生成"
		},
		"order_guid": {
			"bsonType": "string",
			"description": "唯一订单编号",
			"title": "编号",
			"trim": "both"
		},
		"user_id": {
			"bsonType": "string",
			"description": "下单用户ID， 参考`uni-id-users` 表",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		},
		"good_id": {
			"bsonType": "string",
			"title": "商品id",
			"description": "商品id，参考`uni-mall-goods`表",
			"foreignKey": "opendb-mall-goods._id"
		},
		"platform_type": {
			"bsonType": "int",
			"description": "平台类型：1为线下，2为O2O，3为B2C",
			"trim": "both"
		},
		"total_cash": {
			"bsonType": "decimal",
			"description": "实付金额",
			"trim": "both"
		},
		"discount_cash": {
			"bsonType": "decimal",
			"description": "优惠金额",
			"trim": "both"
		},
		"is_promotion": {
			"bsonType": "int",
			"description": "提取状态：0为待提取，1为提取",
			"trim": "both",
			"forceDefaultValue": {
				"$env": 0
			}
		},
		"payment_date": {
			"bsonType": "timestamp",
			"description": "支付时间",
			"trim": "both"
		},
		"cancel_date": {
			"bsonType": "timestamp",
			"description": "取消时间",
			"trim": "both"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}